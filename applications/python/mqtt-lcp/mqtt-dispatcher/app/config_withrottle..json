{
    "config": {
        "node": {
            "name": "**host**-dispatch"
        },
        "logger": {
            "level": "info",
            "file": "/var/log/mqtt-lcp/**node**.log"
        },
        "io": {
            "mqtt": {
                "broker": "mqtt-broker.local",
                "port": 1883,
                "user": "trains",
                "password": "choochoo",
                "ping": 10,
                "sub-topics": {
                    "self": "cmd/trains/node/**node**/#",
                    "broadcast": "cmd/trains/node/all/req",
                    "cab": "cmd/trains/cab/**node**/#",
                    "dispatcher": "cmd/trains/dispatch/**node**/#",
                    "switch": "cmd/trains/switch/**node**/#"
                },
                "pub-topics": {
                    "ping": "dt/trains/ping/**node**",
                    "sensor": "dt/trains/sensor/**node**",
                    "cab": "dt/trains/cab/**node**",
                    "backup": "dt/trains/backup/**node**",
                    "tower": "cmd/trains/tower/mqtt-tower/report"
                },
                "other-topics": {
                    "throttle-ping": "dt/trains/ping/**throttle**"
                }
            },
            "network": {
                "server": {
                    // " a withrottle server"
                    "...": "lnw1 or jmri etc.",
                    "host": "192.168.7.1",
                    "port": 12090,
                    "mode": "text"
                }
            },
            "io-devices": [
                {
                    "io-device": "dcc-accessory",
                    "io-device-type": "switch",
                    "io-address": "LT101",
                    "port-id": "siding-north-east",
                    "description": "siding switch: siding-north-eastt",
                    "send-sensor-message": "yes",
                    "blocks": {
                        "diverge": "siding-north-east",
                        "entry": "north-east",
                        "through": "north"
                    }
                },
                {
                    "io-device": "dcc-accessory",
                    "io-device-type": "switch",
                    "io-address": "LT102",
                    "port-id": "siding-north-west",
                    "description": "siding switch: siding-north-west",
                    "send-sensor-message": "yes",
                    "blocks": {
                        "diverge": "siding-north-east",
                        "entry": "north-west",
                        "through": "north"
                    }
                }
            ]
        },
        "options": {
            "max-locos": 32,
            // "mode: type of device, either dcc++, withrottle, lnet-serial, or lnet-tcp"
            "mode": "dcc++",
            "time": {
                "throttle-timeout": 15
            }
        }
    }
}