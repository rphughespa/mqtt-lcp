{
    "config": {
        "node": {
            "name": "**host**-dispatcher"
        },
        "logger": {
            "level": "info",
            "file": "/var/log/mqtt-lcp/**node**.log"
        },
        "io": {
            "mqtt": {
                "broker": "mqtt-broker.local",
                "port": 1883,
                "user": "trains",
                "password": "choochoo",
                "ping": 10,
                "sub-topics": {
                    "self": "cmd/trains/node/**node**/#",
                    "broadcast": "cmd/trains/node/all/req",
                    "cab": "cmd/trains/cab/**node**/#",
                    "dispatcher": "cmd/trains/dispatcher/**node**/#",
                    "switch": "cmd/trains/switch/**node**/#"
                },
                "pub-topics": {
                    "ping": "dt/trains/ping/**node**",
                    "sensor": "dt/trains/sensor/**node**",
                    "cab": "dt/trains/cab/**node**",
                    "backup": "dt/trains/backup/**node**",
                    "tower": "cmd/trains/tower/mqtt-tower/report"
                },
                "other-topics": {
                    "throttle-ping": "dt/trains/ping/**throttle**"
                }
            },
            "serial": {
                //  "serial settings for dcc++"
                "baudrate": "115200",
                "usb-vendor-id": 9025,
                "usb-product-id": 66,
                "serial-mode": "text",
                "xx-baudrate": "57600",
                "xx-usb-vendor-id": 1027,
                "xx-usb-product-id": 51152,
                "xx-serial-mode": "char"
            },
            "io-devices": [
                {
                    "io-device": "dcc-accessory",
                    "io-device-type": "switch",
                    "io-address": 1,
                    "io-sub-address": 0,
                    "port-id": "siding-north-east",
                    "description": "siding switch: siding-north-eastt",
                    "send-sensor-message": "yes",
                    "blocks": {
                        "diverge": "siding-north-east",
                        "entry": "north-east",
                        "through": "north"
                    }
                },
                {
                    "io-device": "dcc-accessory",
                    "io-device-type": "switch",
                    "io-address": 2,
                    "io-sub-address": 0,
                    "port-id": "siding-north-west",
                    "description": "siding switch: siding-north-west",
                    "send-sensor-message": "yes",
                    "blocks": {
                        "diverge": "siding-north-east",
                        "entry": "north-west",
                        "through": "north"
                    }
                }
            ]
        },
        "options": {
            "max-locos": 32,
            //  "mode: type of device, either dcc++, lnet-serial, or lnet-tcp"
            "mode": "dcc++",
            "time": {
                "throttle-timeout": 15
            }
        }
    }
}