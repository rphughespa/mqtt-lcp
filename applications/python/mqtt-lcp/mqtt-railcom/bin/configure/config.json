{
  "config": {
    "node": {
      "name": "**host**-railcom"
    },
    "logger": {
      "level": "info",
      "file": "/var/log/mqtt-lcp/**node**.log"
    },
    "io": {
      "mqtt": {
        "broker": "mqtt-broker.local",
        "port": 1883,
        "user": "trains",
        "password": "choochoo",
        "ping": 10,
        "sub-topics": {
          "self": "cmd/mqtt-lcp/node/**node**/#",
          "broadcast": "cmd/mqtt-lcp/node/all/#"
        },
        "pub-topics": {
          "ping": "dt/mqtt-lcp/ping/**node**",
          "block": "dt/mqtt-lcp/block/**node**",
          "locator": "dt/mqtt-lcp/locator/**node**"
        }
      },
      "serial": {
        "baudrate": 57600,
        "usb-vendor-id": 1027,
        "usb-product-id": 51152,
        "serial-mode": "char"
      },
      "io-devices": [
        {
          "io-address": 103,
          "io-sub-address": 1,
          "io-device": "block",
          "io-device-type": "sensor",
          "port-id": "siding-north-block",
          "description": "siding north block",
          "io-metadata": {
            "type": "block"
          }
        },
        {
          "io-address": 104,
          "io-sub-address": 1,
          "io-device": "block",
          "io-device-type": "sensor",
          "port-id": "siding_south-block",
          "description": "siding south block",
          "io-metadata": {
            "type": "block"
          }
        },
        {
          "io-address": 103,
          "io-sub-address": 2,
          "io-device": "railcom",
          "io-device-type": "sensor",
          "port-id": "siding-north-locator",
          "description": "siding north locator",
          "io-metadata": {
            "type": "railcom"
          }
        },
        {
          "io-address": 104,
          "io-sub-address": 2,
          "io-device": "railcom",
          "io-device-type": "sensor",
          "port-id": "siding_south-locator",
          "description": "siding south locator",
          "io-metadata": {
            "type": "railcom"
          }
        }
      ]
    }
  }
}