{
    "config": {
        "node": {
            "name": "**host**-supervisor"
        },
        "logger": {
            "level": "info",
            "file": "/var/log/mqtt-lcp/**node**.log"
        },
        "io": {
            "mqtt": {
                "broker": "mqtt-broker.local",
                "port": 1883,
                "user": "trains",
                "password": "choochoo",
                "ping": 10,
                "sub-topics": {
                    "self": "cmd/trains/node/**node**/#",
                    "broadcast": "cmd/trains/node/all/req"
                },
                "pub-topics": {
                    "ping": "dt/trains/ping/**node**"
                }
            }
        },
        "options": {
            "xx-shutdown-command": "xx-sudo halt",
            "xx-reboot-command": "xx-sudo reboot",
            "shutdown-command": "sudo /usr/sbin/shutdown -h now",
            "reboot-command": "sudo /usr/sbin/shutdown -r now",
            "xx-info-command": "landscape-sysinfo",
            "info-command": "/usr/bin/vcgencmd measure_temp && /usr/bin/landscape-sysinfo"
        }
    }
}