{
    "config": {
        "node": {
            "name": "mqtt-tower"
        },
        "logger": {
            "level": "info",
            "file": "/var/log/mqtt-lcp/**node**.log"
        },
        "io": {
            "mqtt": {
                "broker": "mqtt-broker.local",
                "port": 1883,
                "user": "trains",
                "password": "choochoo",
                "ping": 10,
                "sub-topics": {
                    "broadcast": "cmd/trains/node/all/req",
                    "tower": "cmd/trains/tower/**node**/report/req",
                    "fastclock": "cmd/trains/tower/**node**/fastclock/req",
                    "ping": "dt/trains/ping/#",
                    "backup": "dt/trains/backup/#",
                    "sensor": "dt/trains/sensor/#",
                    "block": "dt/trains/block/#",
                    "locator": "dt/trains/locator/#",
                    "switch": "dt/trains/switch/#",
                    "signal": "dt/trains/signal p/#",
                    "self": "cmd/trains/node/**node**/#"
                },
                "pub-topics": {
                    "ping": "dt/trains/ping/**node**",
                    "fastclock": "dt/trains/tower/**node**/fastclock",
                    "node": "cmd/trains/node"
                }
            }
        },
        "options": {
            "backup-path": "/home/pi/mqtt-lcp/backups",
            "data-path": "/home/pi/mqtt-lcp/data",
            "time": {
                "dashboard": {
                    "timeout": 45,
                    "interval": 60
                },
                "fastclock": {
                    "ratio": 4,
                    "interval": 30
                }
            }
        }
    }
}